{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "app": ["app/"],
      "test": ["test/"],
      "frontend": ["frontend/"]
    },
    "typeRoots": ["app/typings", "./node_modules/@types"]
  },
  "include": ["app/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
