{
  "name": "simon",
  "version": "0.0.1",
  "description": "Pleo test engineer challenge (heracles)",
  "main": "index.ts",
  "repository": "https://github.com/Niceplace/pleo-heracles-challenge",
  "author": "s.beaulie2@gmail.com",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "test:unit": "mocha test/unit/**/*.spec.ts",
    "test:unit:watch": "yarn test:unit --watch",
    "test:unit:cover": "nyc --silent npm run test:unit && nyc report",
    "test:acceptance": "mocha test/acceptance/**/*.spec.ts",
    "test:acceptance:watch": "yarn run test:acceptance --watch",
    "test:cypress": "start-server-and-test start http://localhost:3030 cy:run",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "check-ts": "tsc -p . --noEmit",
    "lint": "tslint --exclude './**/node_modules/**/*.ts' './**/*.ts'",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "ts-node src/index.ts"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:unit",
      "pre-push": "yarn check-ts && npm run test:acceptance"
    }
  },
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.141",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.3",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^5.2.7",
    "@types/proxyquire": "^1.3.28",
    "@types/supertest": "^2.0.8",
    "blns": "^2.0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cypress": "^3.4.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.3",
    "start-server-and-test": "^1.10.5",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "webpack": "^4.41.0"
  }
}
